<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.janter.supplychainsimulation" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.software.leanback"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".login"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Index"
            android:label="@string/title_activity_index" >
        </activity>
        <activity
            android:name=".register"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name=".activity_register_ruler"
            android:label="@string/title_activity_activity_register_ruler" >
        </activity>
        <activity
            android:name=".register_ruler"
            android:label="@string/title_activity_register_ruler" >
        </activity>
        <activity
            android:name=".index_ruler"
            android:label="@string/title_activity_index_ruler" >
        </activity>
        <activity
            android:name=".Multiplayer"
            android:label="@string/title_activity_multiplayer" >
        </activity>
        <activity
            android:name=".ChangeParameter"
            android:label="@string/title_activity_change_parameter" >
        </activity>
        <activity
            android:name=".ChooseOperation"
            android:label="@string/title_activity_choose_operation" >
        </activity>
        <activity
            android:name=".QueryResult"
            android:label="@string/title_activity_query_result" >
        </activity>
        <activity
            android:name=".ThisChainResult"
            android:label="@string/title_activity_this_chain_result" >
        </activity>
    </application>

</manifest>
