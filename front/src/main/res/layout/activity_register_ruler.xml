<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="53dp"
        android:layout_row="0"
        android:layout_column="0"
        android:background="#ff3995ff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Ruler Register"
            android:id="@+id/textView7"
            android:textColor="#ffffffff"
            android:textSize="28dp"
            android:textIsSelectable="false"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="72dp"
        android:layout_row="3"
        android:layout_column="0"></TableRow>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="286dp"
        android:layout_row="4"
        android:layout_column="0">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Phone"
                android:id="@+id/textView3"
                android:layout_column="0"
                android:layout_marginLeft="18dp"
                android:textColor="#ff3995ff" />

            <EditText
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:ems="10"
                android:id="@+id/editText_rulephone"
                android:layout_column="1"
                android:layout_marginLeft="15dp"
                android:background="@drawable/text_round_blue"
                android:layout_marginTop="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Name"
                android:id="@+id/textView4"
                android:layout_column="0"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="15dp"
                android:textColor="#ff3995ff" />

            <EditText
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:ems="10"
                android:id="@+id/editText_rulename"
                android:layout_column="1"
                android:layout_marginLeft="15dp"
                android:background="@drawable/text_round_blue"
                android:layout_marginTop="15dp"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Passwrod"
                android:id="@+id/textView5"
                android:layout_column="0"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="15dp"
                android:textColor="#ff3995ff" />

            <EditText
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:ems="10"
                android:inputType="textPassword"
                android:id="@+id/editText_rulepassword"
                android:layout_column="1"
                android:layout_marginLeft="15dp"
                android:background="@drawable/text_round_blue"
                android:layout_marginTop="15dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="E-mail"
                android:id="@+id/textView6"
                android:layout_column="0"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="15dp"
                android:textColor="#ff3995ff" />

            <EditText
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:ems="10"
                android:id="@+id/editText_ruleemail"
                android:layout_column="1"
                android:layout_marginLeft="15dp"
                android:background="@drawable/text_round_blue"
                android:layout_marginTop="15dp"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="WorkID"
                android:id="@+id/textView8"
                android:layout_column="0"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="15dp"
                android:textColor="#ff3995ff"  />

            <EditText
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:ems="10"
                android:id="@+id/editText_ruleworkId"
                android:layout_column="1"
                android:layout_marginLeft="15dp"
                android:background="@drawable/text_round_blue"
                android:layout_marginTop="15dp" />
        </TableRow>
    </TableLayout>

    <Button
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:text="Register"
        android:id="@+id/button_regRuleConfirm"
        android:layout_row="5"
        android:layout_column="0"
        android:background="@drawable/button"
        android:clickable="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:text="Cancel"
        android:id="@+id/button_regRuleCancel"
        android:layout_row="6"
        android:layout_column="0"
        android:background="@drawable/button"
        android:clickable="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:textColor="#ffffffff"
        android:textStyle="bold" />

</GridLayout>
