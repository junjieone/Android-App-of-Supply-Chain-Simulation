<?xml version="1.0" encoding="utf-8"?>
    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ff3995ff">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_row="0"
        android:layout_column="0"
        android:src="@drawable/logo_blue"
        android:background="#ffffffff" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Main Menu"
        android:id="@+id/textView12"
        android:layout_row="1"
        android:layout_column="0"
        android:textColor="#ffffffff"
        android:textIsSelectable="false"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView22"
        android:layout_row="2"
        android:layout_column="0" />

    <Button
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:text="Manage Parameter"
        android:id="@+id/button_chooseManage"
        android:layout_row="3"
        android:layout_column="0"
        android:background="@drawable/button_blue"
        android:clickable="true"
        android:textStyle="bold"
        android:textColor="#ff3995ff"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:text="Query Decision Result"
        android:id="@+id/button_chooseQuery"
        android:layout_row="4"
        android:layout_column="0"
        android:background="@drawable/button_blue"
        android:clickable="true"
        android:layout_gravity="center_horizontal"
        android:textColor="#ff3995ff"
        android:textStyle="bold"
        android:layout_marginTop="15dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:text="Exit System"
        android:id="@+id/button_chooseExit"
        android:layout_row="5"
        android:layout_column="0"
        android:background="@drawable/button_blue"
        android:clickable="true"
        android:layout_gravity="center_horizontal"
        android:textColor="#ff3995ff"
        android:textStyle="bold"
        android:layout_marginTop="15dp" />
</GridLayout>