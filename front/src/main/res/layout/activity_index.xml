<ScrollView xmlns:Android="http://schemas.android.com/apk/res/android"
    Android:layout_height="fill_parent"
    Android:layout_width="fill_parent"
    Android:background="#FF3995FF"
    Android:scrollbars="vertical"
    Android:clickable="true">


    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/logo_blue"
            android:background="#ffffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Select Character &amp; Chain:"
            android:id="@+id/textView12"
            android:layout_row="1"
            android:layout_column="0"
            android:textColor="#ffffffff"
            android:textIsSelectable="false"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:textSize="20dp" />

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_row="2"
            android:layout_column="0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Character"
                android:id="@+id/textView14"
                android:layout_row="0"
                android:layout_column="0"
                android:textColor="#ffffffff"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp" />
            <RadioGroup

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="12dp"
                android:id="@+id/radioGroup_index">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Retailer"
                    android:id="@+id/radioButton_retailer"
                    android:checked="false"
                    android:textSize="18dp"
                    android:textColor="#ffffffff"
                    android:button="@drawable/radiobutton" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Supplier"
                    android:id="@+id/radioButton_supplier"
                    android:checked="false"
                    android:textSize="18dp"
                    android:textColor="#ffffffff"
                    android:button="@drawable/radiobutton"
                    android:layout_marginTop="2dp" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Manufacturer"
                    android:id="@+id/radioButton_manufacturer"
                    android:checked="false"
                    android:textSize="18dp"
                    android:textColor="#ffffffff"
                    android:button="@drawable/radiobutton"
                    android:layout_marginTop="2dp" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Chain"
                android:id="@+id/textView1"
                android:layout_row="1"
                android:layout_column="0"
                android:textColor="#ffffffff"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp" />
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editText_inChain"
                android:layout_row="1"
                android:layout_column="1"
                android:background="@drawable/text_round"
                android:layout_marginLeft="15dp"
                android:textColor="#ffd0d0d0"
                android:layout_marginTop="5dp"
                android:hint="Chain Number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="System"
                android:id="@+id/textView1"
                android:layout_row="2"
                android:layout_column="0"
                android:textColor="#ffffffff"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp" />
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editText_inSystem"
                android:layout_row="2"
                android:layout_column="1"
                android:background="@drawable/text_round"
                android:layout_marginLeft="15dp"
                android:textColor="#ffd0d0d0"
                android:layout_marginTop="5dp"
                android:filterTouchesWhenObscured="false"
                android:hint="System Number" />

        </GridLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Import Parameters:"
            android:id="@+id/textView2"
            android:layout_row="3"
            android:layout_column="0"
            android:textColor="#ffffffff"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp" />

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_row="4"
            android:layout_column="0">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Phone"
                android:id="@+id/textView3"
                android:layout_row="0"
                android:layout_column="0"
                android:textColor="#ffffffff"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp" />
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editText_inPhone"
                android:layout_row="0"
                android:layout_column="1"
                android:background="@drawable/text_round"
                android:textColor="#ffd0d0d0"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="42dp"
                android:hint="Ruler&apos;s phone number" />

        </GridLayout>
        <GridLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_marginTop="15dp">

            <Button
                android:layout_width="362dp"
                android:layout_height="48dp"
                android:text="Start"
                android:id="@+id/button_inMulti"
                android:layout_row="0"
                android:layout_column="1"
                android:background="@drawable/button_blue"
                android:clickable="true"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="#ff3995ff"
                android:layout_marginLeft="0dp" />
            </GridLayout>
    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_row="6"
        android:layout_column="0">
        <Button
            android:layout_width="362dp"
            android:layout_height="48dp"
            android:text="Cancel"
            android:id="@+id/button_inRuleCancel"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/button_blue"
            android:clickable="true"
            android:layout_gravity="center_horizontal"
            android:textColor="#ff3995ff"
            android:textStyle="bold"
            android:layout_marginTop="5dp" />
    </GridLayout>
    </GridLayout>
</ScrollView>