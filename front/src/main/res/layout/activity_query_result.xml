<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:Android="http://schemas.android.com/apk/res/android"
    Android:layout_height="match_parent"
    Android:layout_width="match_parent"
    Android:scrollbars="vertical"
    Android:background="#FF3995FF"
    Android:clickable="true">
    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/logo_blue"
            android:background="#ffffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Chain Information"
            android:id="@+id/textView12"
            android:layout_row="1"
            android:layout_column="0"
            android:textColor="#ffffffff"
            android:textIsSelectable="false"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:textSize="20dp" />

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="System Number"
                android:id="@+id/textView13"
                android:layout_row="0"
                android:layout_column="0"
                android:textColor="#ffffffff"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText_querySystem"
                android:layout_row="0"
                android:layout_column="1"
                android:background="@drawable/text_round"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:textColor="#ff000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Chain Number"
                android:id="@+id/textView14"
                android:layout_row="1"
                android:layout_column="0"
                android:textColor="#ffffffff"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText_queryChain"
                android:layout_row="1"
                android:layout_column="1"
                android:background="@drawable/text_round"
                android:layout_marginLeft="15dp"
                android:textColor="#ff000000"
                android:layout_marginTop="5dp" />
        </GridLayout>

        <Button
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:text="Query"
            android:id="@+id/button_queryQuery"
            android:layout_row="3"
            android:layout_column="0"
            android:background="@drawable/button_blue"
            android:clickable="true"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="#ff3995ff"
            android:layout_marginTop="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Decision Information"
            android:id="@+id/textView1"
            android:layout_row="4"
            android:layout_column="0"
            android:textColor="#ffffffff"
            android:textIsSelectable="false"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:textSize="20dp"
            android:layout_marginTop="15dp" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:id="@+id/listView_query"
            android:layout_row="5"
            android:layout_column="0" />
        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_row="6"
            android:layout_column="0">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Average Total Profit: "
                android:id="@+id/textView12"
                android:layout_row="0"
                android:layout_column="0"
                android:textColor="#ffffffff"
                android:textIsSelectable="false"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                android:textSize="20dp"
                android:layout_marginTop="5dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView_queryTotal"
                android:layout_row="0"
                android:layout_column="1"
                android:textColor="#ffffffff"
                android:textIsSelectable="false"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                android:textSize="20dp"
                android:layout_marginTop="5dp" />
        </GridLayout>
        <Button
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:text="Back"
            android:id="@+id/button_queryBack"
            android:layout_row="7"
            android:layout_column="0"
            android:background="@drawable/button_blue"
            android:clickable="true"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="#ff3995ff"
            android:layout_marginTop="10dp" />
    </GridLayout>
</ScrollView>